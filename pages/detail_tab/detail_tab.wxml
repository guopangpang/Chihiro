<header></header>
<view class='tab_container'>
    <!--Tab布局-->
    <view class='title'>
        <view class='titleSel' bindtap='titleClick' data-idx='0'>
            <text>服务</text>
            <hr class="{{0 == currentIndex ? 'headerLineSel' : 'headerLineUnsel'}}" />
        </view>

        <view class='titleSel' bindtap='titleClick' data-idx='1'>
            <text>评论</text>
            <hr class="{{1 == currentIndex ? 'headerLineSel' : 'headerLineUnsel'}} " />
        </view>
    </view>

    <!--内容布局-->
    <swiper class='swiper' bindchange='pagechange' current='{{currentIndex}}'>
        <!--服务-->
        <swiper-item class='swiper'>
            <service-info servieDetail="{{serviceList}}">
                <view class="time_money">
                    <text class="bianji_time">最近编辑时间：{{serviceList.time}}</text>
                    <view>
                        <text class="danjai">{{serviceList.paid}}元 （非服务费）</text>
                        <text class="pay_times">{{serviceList.frequency}}次购买</text>
                    </view>
                </view>
            </service-info>
        </swiper-item>
        <!--平论-->
        <swiper-item class='swiper' class='swiper'>
            <review-item wx:for="{{reviewList}}" wx:key="index" item="{{item}}"></review-item>
        </swiper-item>
    </swiper>
</view>
<view class="advisory" wx:if="{{currentIndex==0}}" bindtap="gotoAdvisory">立即咨询</view>