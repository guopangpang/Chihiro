.service_detail_body{
    background-color: #ededed;
}
.service_detail_swiper{
    width: 100vw;
    height: 100vw;
}
.service_detail_swiper_item{
    width: 100vw;
    height: 85.7vw;
}
.service_detail_swiper_image{
    width: 100vw;
    height: 85.7vw;
}
.service_detail_container{
    padding: 60rpx 40rpx 0;
    background-color: #fff;
}
.consultingFee{
    display: flex;
    align-items: center;
}
.consultingFee_moeny{
    font-size: 36rpx;
    color: #fd5001;
}
.consultingFee_word{
    margin-left: 10rpx;
    height: 40rpx;
    width:130rpx;
    text-align: center;
    border-radius: 20rpx;
    line-height: 40rpx;
    font-size: 26rpx;
    color: #fd5100;
    background-color: #fff2ec;
}
.service_detail_title{
    margin-top: 10rpx;
    font-size: 36rpx;
    font-weight: bold;
}
.service_detail_info{
    display:-webkit-box;
    overflow:hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1000;
    -webkit-box-orient: vertical;
    padding: 20rpx 0 40rpx;
    font-size: 22rpx;
    color: #020202;
}
.question_person{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    margin: 0 0 20rpx;
    padding: 0 40rpx;
    background-color: #fff;
}
.question_person_img_name{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 180rpx;
}
.question_person_img_name .headerImg{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.question_person_img_name .name{
    font-size: 30rpx;
    font-weight: bold;
}
.question_person .find_service{
    height: 50rpx;
    width: 180rpx;
    line-height: 50rpx;
    border-radius: 25rpx;
    text-align: center;
    color: #fd5100;
    background-color: #fff2ec;
    font-size: 30rpx;
}
.service_detail_liubai{
    height: 300rpx;
    background-color: #fff;
}
.advisory_soon{
    position: fixed;
    bottom: 0;
    left: 0;
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    background-color: #eb5000;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
}