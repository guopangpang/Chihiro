.myOrder_container{
    width: 100vw;
    background-color: #ededed;
}
.my_order_tab{
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    height: 80rpx;
    background-color: #fff;
    z-index: 9999;
}
.my_order_tab_item{
    width: 50vw;
    height: 80rpx;
}
.wy_order_item_word{
    line-height: 80rpx;
    width: 20vw;
    margin: 0 auto;
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
}
.red_color{
    color: #3699FF;
    border-bottom: 2px solid #3699FF;
}

.my_order_scroll{
    height: calc(100vh - 80rpx);
    margin: 80rpx 0 0 0;
}