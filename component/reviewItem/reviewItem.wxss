.review_item_container{
    display: flex;
    flex-direction: column;
    padding: 0 40rpx;
    margin-bottom: 20rpx;
    width: calc(100% - 80rpx);
    background-color: #fff;
}
.review_item_second_body{
    display: flex;
    align-items: center;
}
.review_person_headerImg{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}
.review_item_thrid_body{
    display: flex;
    flex-direction: column;
    height: 60rpx;
    margin-left: 30rpx;
}
.review_person_name{
    font-size: 24rpx;
    height: 30rpx;
}
.review_item_forue_body{
    height: 30rpx;
    font-size: 24rpx;
}
.review_time{

}
.review_title{
    margin-left: 40rpx;
}
.review_info{
    display:-webkit-box;
    overflow:hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 100;
    -webkit-box-orient: vertical;
    margin-top: 20rpx;
    font-size: 24rpx;
    font-weight: bold;
    padding-bottom: 30rpx;
}